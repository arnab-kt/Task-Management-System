<% content_for :title, "Admin Login" %>
<div class="modal fade" id="popUpWindow">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      </div>
      <%= form_for :login, :url => sessions_path do |form| %>
        <div class="modal-body">
          <div class="popup-wrapper">
            <div class="wrapper">
              <div class="card card-5">
                <div class="card-body">
                  <h1 class="title text-center">ADMIN LOGIN</h1>
                  <div class="form-group row">
                    <%= form.label :email, for: "email", class:"col-sm-2 col-form-label"%>
                    <div class="col-sm-10">
                      <%= form.email_field :email,for: "email", class: "form-control", autofocus: true, autocomplete: "email", placeholder: "Enter Email ID", required: true %>
                    </div>
                  </div>
                  <div class="form-group row">
                    <%= form.label :password, for: "password", class:"col-sm-2 col-form-label" %>
                    <div class="col-sm-10">
                      <%= form.password_field :password, for: "password", class: "form-control", autocomplete: "current-password", placeholder: "Enter Password", required: true %>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
        </div>
        <div class="modal-footer">
          <div class="row">
            <div class="col-6">
              <strong><%= link_to "BACK", root_path, class: "btn btn-danger btn-lg btn-block my-2 my-sm-0" %></strong>
            </div>
            <div class="col-6">
              <strong><%= form.submit "LOGIN", class:"btn btn-primary btn-lg btn-block my-2 my-sm-0" %></strong>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>


