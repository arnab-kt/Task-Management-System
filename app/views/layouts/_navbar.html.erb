<nav class="navbar navbar-expand-md navbar-dark bg-dark">
  <a class="navbar-brand" href="<%= root_path%>">Task Management System</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
  </button>
  
    <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <% if current_user %>
      <ul class="navbar-nav ml-auto">
          <li class="nav-item nav-link active">
            <strong><%= link_to "Dashboard", user_dashboard_path, class:"nav-link text-center"%></strong>
          </li>
        <li class="nav-item nav-link">
            <strong><%= link_to "My Task", tasks_path, class:"nav-link text-center"%></strong>
        </li>
        <li class="nav-item btn-group" data-behavior="notifications">
          <a class="dropdown-toggle nav-link" data-behavior="notifications-link" id="dropdownMenu1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
            <i class="fa fa-bell"></i><span class="red" id="unread-count">(<%= (Notification.where(recipient: current_user).unread).count %>)</span>
          </a>
          <div class="dropdown-menu" id="notifications" aria-labelledby="dropdownMenu1" data-behavior="notification-items">
           <%= render "layouts/notification" %>
          </div>
