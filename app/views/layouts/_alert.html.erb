<% flash.each do |key, value| %>
  <div class = "row justify-content-center">
    <div class = "col-4"></div>
    
    <div class = "col-4">
      <div id="notice_wrapper" class="alert alert-<%= key%> alert-dismissible hide show align-items-center", role="alert">
        <p class="align-items-center"><strong><%= value %></strong></p>
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
    </div>
    <div class = "col-4"></div>
  </div>
<% end %>
