<% content_for :title, "" %>
<h1 class="text-center">LIST OF APPROVED TASK </h1>
<div class="page-wrapper">
  <div class="tasklist-wrapper">
    <div class="card card-6">
      <div class="card-body">
        <div class="task-list">
          <div class="row">
            <% unless current_user.hr %>
              <div class="col-12 col-sm-4 task-index-col text-center">
                <%= link_to "CREATE TASK", new_task_path, class: "btn btn-primary btn-lg" %>
              </div>
              <div class="col-12 col-sm-4 task-index-col text-center">
                <%= link_to "BACK", users_dashboard_path, class: "btn btn-secondary btn-lg" %>
              </div>
            <% end %>
            <div class="col-12 col-sm-4 task-index-col text-center">
              <div class="form-group row">
                <% priorities=["Low", "Medium", "High", "In progress", "Submitted", "Approved", "Pending"]%>
                <span class="fa fa-filter col-3 text-right"></span>
                <div class="col-7 text-right">
                  <%= select_tag(:priority, options_for_select(priorities), prompt:"All", class:"form-control btn btn-outline-success text-center") %>
                </div>
                <div class="col-2"></div>
                <div class="col-12 col-sm-8 col-md-4"></div>
              </div>
            </div>
          </div>
          <table class="table table-striped table-bordered table-hover table-dark" data-toggle="table">
            <caption class="text-center"> List of Tasks Assigned by You</caption>
            <thead>
              <tr class="text-center">
                <th scope= "col">#</th>
                <th scope= "col">Task ID</th>
                <th scope= "col">Task Name</th>
                <th scope= "col">Category</th>
                <th scope= "col">Priority</th>
                <th scope= "col">Deadline</th>
                <th scope= "col">Assigned To</th>
                <th scope= "col">Assigned By</th>
                <th scope= "col">Status</th>
                <th scope= "col">View</th>
                <% if current_user.admin %>
                  <th scope= "col">Send to HR</th>
                <% end %>
                <th scope= "col">Delete</th>
              </tr>
            </thead>
            <% if @tasks_approved.present? %>
              <tbody id="task_table">
                <% @tasks_approved.each do |task|%>
                  <tr class="green">
                    <td><%= @tasks_approved.index(task)+1 %></td>
                    <td class= "text-center"><%= task.id%></td>
                    <td class= "text-center"><%= task.task_name%></td>
                    <td class= "text-center"><%= task.category.name%></td>
                    <td id="priority" class= "text-center"><%= task.priority%></td>
                    <td class= "text-center"><%= DateTime.parse(task.submit_date.to_s).strftime("%d-%m-%Y - %I:%M %p") %></td>
                    <td class="text-center"><%= task.user.name %></td>
                    <td class= "text-center"><%= User.find(task.assign_task_by).name%></td>
                    <td class= "text-center">
                      <% if task.approved%>
                        Approved
                      <% end%>
                    </td>
                    <td class="text-center">
                      <%= link_to "", task_path(task), class:"fa fa-eye" %>
                    </td>
                    <% if current_user.admin %>
                      <td class= "text-center">
                        <%= link_to "Notify HR", notify_hr_task_path(task), class:"btn btn-success" if task.submit%>
                      </td>
                    <% end%>
                    <td class="text-center">
                      <%= link_to "", task_path(task), data: {confirm: "Are you sure to delete?" }, method: :delete, class:"fa fa-trash"%>
                    </td>
                  </tr>
                <% end %>
              </tbody>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
