<% content_for :title, "Users" %>
<h1 class="text-center"> User List</h1>
<br />
<div class="container">
  <div class="row">
    <div class="col-12 text-center">
      <%= link_to  "Add User", new_user_path, class: "btn btn-primary btn-lg" %>
    </div>
  </div>
  <br/>
  <% if @users.present? %>
    <table class="table table-striped table-bordered table-hover table-dark">
      <caption class="text-center"> List of Employees</caption>
      <thead>
        <tr class="text-center">
          <th scope="col">#</th>
          <th scope="col">Name</th>
          <th scope="col">Email ID</th>
          <th scope="col">Phone No.</th>
          <th scope="col">D.O.B</th>
          <th scope="col">Role</th>
          <th scope="col">Edit</th>
          <th scope="col">Delete</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user|%>
          <tr>
            <th scope="row"><%= @users.index(user)+1 %></th>
            <td><%= user.user_name%></td>
            <td><%= user.email %></td>
            <td><%= user.phone %></td>
            <td><%= DateTime.parse(user.dob.to_s).strftime("%d-%m-%Y") %></td>
            <td class="text-center">
              <% if user.admin %>
                ADMIN
              <% elsif user.hr%>
                HR
              <%else%>
                EMPLOYEE
              <%end%>
            </td>
            <% unless user.admin %>
              <td class="text-center">
                <%= link_to "", edit_user_path(user), class:"fa fa-edit"%>
              </td>
              <td class="text-center">
                <%= link_to "", user_path(user), data: {confirm: "Are you sure?" }, method: :delete, class:"fa fa-trash"%>
              </td>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>
